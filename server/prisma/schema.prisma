generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      UserRole @default(USER)
  name      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  projects Project[]
  discordIntegration DiscordIntegration[]
}


model Project {
  id        String   @id @default(cuid())
  projectTitle     String  
  projectDescription      String 
  userId String
  dbUser String?
  dbName String?
  dbDomain String?
  dbPassword String?
  dbSchema String?
  isActionDone Boolean @default(false)
  inactiveDatabases String[]

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
  dbBackups DatabaseBackups[]
  whiteListedIP WhiteListedIP[]
}

model DiscordIntegration{
  id String @id @default(cuid())
  userId String @unique
  channelId String

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  user User @relation(fields: [userId] , references: [id] , onDelete: Cascade)
}


model DatabaseBackups{
  id String @id @default(cuid())
  projectId String 
  dbName String 
  publicId String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId],references: [id],onDelete: Cascade)
}

model WhiteListedIP{
  id String @id @default(cuid()) 
  projectId String 
  ip String
  dbName String 
  isActive Boolean @default(false)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId],references: [id],onDelete: Cascade)
}